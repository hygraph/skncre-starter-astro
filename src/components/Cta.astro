---
interface Props {
  __typename: string;
  chapeau: string;
  title: string;
  description: string;
  url: string;
  cta: string;
}

const { chapeau, title, description, url, cta } = Astro.props;
---

<div class="w-full mb-12 bg-tertiary p-8">
  <h3 class="mb-8">
    {
      chapeau ? (
        <span class="block text-primary font-bold font-title text-4xl md:text-6xl">
          {chapeau}
        </span>
      ) : null
    }

    {
      title ? (
        <span class="block text-dark font-bold font-title text-3xl sm:text-4xl md:text-6xl sm:ml-8 sm:-mt-2">
          {title}
        </span>
      ) : null
    }
  </h3>

  {description ? <p class="text-xl sm:ml-8 mb-8">{description}</p> : null}

  {
    url ? (
      <a class="inline-block cta ml-8" href={url}>
        {cta}
      </a>
    ) : null
  }
</div>
